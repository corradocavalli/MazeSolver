<Window x:Class="MazeSolverClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeSolverClient"
        mc:Ignorable="d"
        Title="Maze Solver by Corrado Cavalli"
        Height="450"
        Width="800">
    <Grid>
        <TextBlock x:Name="MovesTextBlock"
                   Foreground="LightBlue"
                   FontSize="78"
                   Margin="0,-180,0,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
        <StackPanel Width="200"
                    VerticalAlignment="Center">
            <Button Content="Solve the maze!"
                    Height="50"
                    x:Name="SolverButton"
                    Click="OnSolve" />
            <TextBlock x:Name="ProgressTextBlock"
                       Margin="0,20,0,0"
                       HorizontalAlignment="Center" />
        </StackPanel>

    </Grid>
</Window>
